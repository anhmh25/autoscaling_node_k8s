#run 1 with sudo 
sudo ./setup_ansible_server_1.sh
#config ssh to PermitRootLogin yes
#run 2 with sudo 
./gen_ssh_key_and_copy_id_2.sh
#change the root password to all server

sudo ansible-playbook ~/ansible/playbook/kube_dependencies_1.yml -i ~/ansible/inventory/kube_inventory
sudo ansible-playbook ~/ansible/playbook/kube_master_2.yml -i ~/ansible/inventory/kube_inventory
sudo ansible-playbook ~/ansible/playbook/kube_workers_3.yml -i ~/ansible/inventory/kube_inventory

#install helm
curl -fsSL -o get_helm.sh https://raw.githubusercontent.com/helm/helm/main/scripts/get-helm-3
chmod 700 get_helm.sh
./get_helm.sh
